{% macro iconcategory(title = "Icons", ymlname) %}

  <h3 class="icons-demo__title">{{ title }}</h3>
  <div class="icons-demo" id="icons-{{ title | lower | replace({' ': '-'}) }}">
    {% for item in ymlname %}
      <div class="icons-demo__item">
        {% include "@atoms/icons/_icon.twig" with {
          icon_name: item.value,
          icon_title: item.name,
          icon_desc: item.desc,
          icon_decorative: item.decorative,
          icon_use_rtl: item.use_rtl,
        } %}
        <div class="icon-name-wrapper">
          <span class="icon-name">{{ item.value }}</span>
        </div>
      </div>
    {% endfor %}
  </div>
{% endmacro %}

